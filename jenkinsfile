pipeline {
    agent any

    environment {
        registry = "alanboyce2/hw3"
        registryCredential = 'DOCKERHUB_ACCESS_KEY'
        dockerImage = ''
    }

    stages {
        stage("Building the Student Survey Frontend Image"){
            steps {
                script {
                    checkout scm
                    sh 'echo ${BUILD_TIMESTAMP}'
                    dockerImage = docker.build registry + ":$BUILD_NUMBER"
                }
            }
        }

        stage("Pushing Image to DockerHub"){
            steps {
                script {
                    docker.withRegistry('', registryCredential) {
                        dockerImage.push()
                    }
                }
            }
        }

        stage("Deploying to Rancher"){
            steps {
                sh 'kubectl set image deployment/hw3-deploy container-0=alanboyce2/hw3-frontend:${BUILD_NUMBER}'
            }
        }
    }
}
